{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug run.py - OpenAI Single Needle",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/needlehaystack/run.py",
            "args": [
                "--provider", "openai",
                "--model_name", "gpt-4.1-mini",
                "--document_depth_percents", "[50]",
                "--context_lengths", "[2000]"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug run.py - Anthropic Single Needle",
            "type": "python",
