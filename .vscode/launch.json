            }
        },
        {
            "name": "Debug run.py - Multi Needle",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/needlehaystack/run.py",
            "args": [
                "--provider", "openai",
                "--model_name", "gpt-4-0125-preview",
